@model Product
@{
    ViewData["Title"] = "Create";
}
@* 
    asp-asp-controller: Controller adını belirtir.
    asp-action: Hangi action'a yönlendireceğini belirtir.
    method: Formun hangi method ile gönderileceğini belirtir.
    yani Home/Create post olarak gönderilir
 *@
<form asp-controller="Home" asp-action="Edit" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="ProductId" id="">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control"/>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" id="Price" class="form-control"/>
    </div>
    <div class="input-group mb-3">
        <input type="file" name="imageFile" id="imageFile" class="form-control">
    </div>
    <div class="input-group mb-3">
        <img src="/img/@Model.ImageUrl" alt="" width="100" height="100" class="img-thumbnail" />
        <input type="hidden" asp-for ="@Model.ImageUrl">
    </div>
     <div class="mb-3">
        <label asp-for="CategoryId" class="form-label"></label>
        <select asp-for="CategoryId" id="CategoryId" asp-items="ViewBag.Categories" class="form-select">      
        </select>
    </div>
    <div class="mb-3 form-check">
        <input asp-for="IsActive" id="IsActive" class="form-check-input"/>
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>