@model ProductViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="card card-body my-3">
    <form asp-action="Index" method="get">
        <div class="container">
            <div class="row">
                <div class="col-md-11">
                    <select 
                    name="category" 
                    class="form-select" 
                    asp-items="@(new SelectList(Model.Categories, "CategoryId", "Name", Model.SelectedCategory))">
                        <option value="0">Hepsi</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary">Filtrele</button>
                </div>
            </div>
        </div>
    </form>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th style="width: 100px;">@Html.DisplayNameFor(m =>m.Products[0].ProductId)</th>
            <th style="width: 100px;">@Html.DisplayNameFor(m =>m.Products[0].ImageUrl)</th>
            <th>@Html.DisplayNameFor(m =>m.Products[0].Name)</th>
            <th style="width: 100px;">@Html.DisplayNameFor(m =>m.Products[0].Price)</th>
            <td></td>
            <th style="width: 140px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var prd in @Model.Products)
        {
            <tr>
                <td>@prd.ProductId</td>
                <td>
                    <img src="~/img/@prd.ImageUrl" class="img-fluid" alt="Product Image" style="width: 50px; height: 50px;" />
                </td>
                <td>@prd.Name</td>
                <td>@prd.Price</td>
                <td>
                    <input type="checkbox"/>
                </td>
                <td>
                    <a href="/Home/Edit/@prd.ProductId" class="btn btn-sm btn-primary">Edit</a>
                    <a href="/Home/Delete/@prd.ProductId" class="btn btn sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>